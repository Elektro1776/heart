{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

<!-- start: #page -->
<main id="page" class="main" role="main" style="background-color:#ffffff;">

	<!-- start: .center -->
	<div class="container">
		<div class="col-md-12">



		<!-- start: .left-content -->
		<div class="left-content section">
			<article class="{{post_class}} ">

				{{! Everything inside the #post tags pulls data from the post }}
				{{#post}}
					<header style="border-bottom:1px solid #eee; margin-bottom:30px;">
						<h1 class="title bordered" style="font-family:PT Sans Caption, sans-serif;">{{{title}}}</h1>
					</header>
					<section class="post-content">
						<div class="text">
							{{content}}
						</div>
						<div class="clear"></div>
					</section>
				{{/post}}

			</article>
		</div>
		<!-- end: .content -->

	</div>
	</div>
	<!-- end: .center -->

</main>
<!-- end: #page -->
