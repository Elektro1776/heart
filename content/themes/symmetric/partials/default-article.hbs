{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<main id="home" class="main" role="main">

	<!-- start: .center -->
	<div class="row">


		<!-- start: .left-content -->
		<div class="left-content section articles pull-left col-md-8 " style="margin-top:0;">


			{{#foreach posts }}

					<article class="default col-md-12 {{post_class}} {{#if @first}} first-post{{/if}}">
						<header>
								  <div class="{{^if @first}}col-md-6 col-lg-6{{/if}} {{#if @first}} col-md-12 {{/if}}">

										{{#if image}}
											<a href="{{url}}" class="thumb hover-effect">
												<img src="{{image}}" style="">
											</a>
										{{else}}
											{{content words="0"}}
										{{/if}}

									</div>
									<!--	<div class="clear"></div>-->
									<div class="{{^if @first}}col-md-6 col-lg-6{{/if}} col-md-12 col-xs-12">

										<div id="meta">

										<div class="meta">
											<div id="time">

												<time datetime="{{date format="YYYY-MM-DD"}}"><i class="fa fa-clock-o"></i>{{date}}</time>
											</div>
											<a href="{{url}}#comments" class="comments alignright"><i class="fa fa-comment"></i> <span class="disqus-comment-count" data-disqus-url="{{@blog.url}}{{url}}">0</span></a>
											<div class="clear"></div>
										</div>
									</div>
								<div class="row">
								 <div class="">
									<h4 class="title tag-title"><a href="{{url}}">{{{title}}}</a></h4>
								</div>
							</div>
						</header>
									<div class="">

									<div class="post-excerpt">
										{{excerpt words="20"}}
										<a href="{{url}}" class="continue_reading" style="opactiy: .5;">Continue Reading</a>
										<i class="fa fa-angle-double-right"></i>

									</div>
								</div>
					<!--  <div class="">

									<a href="javascript:void(0)" class="button dark share-button"><i class="fa fa-share-alt"></i> SHARE</a>
									<div class="tip-content">
										<div class="share">
											<a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
										onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="fa fa-facebook"></i></a>
											<a class="twitter" href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
										onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="fa fa-twitter"></i></a>
											<a class="googleplus" href="https://plus.google.com/share?url={{url absolute="true"}}"
										 onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"><i class="fa fa-google-plus"></i></a>
									 </div>
										</div>
									</div>
								-->

			{{/foreach}}

	</div>
		<!-- end: .left-content -->


		<div class="section">

			{{> sidebar-featured}}



		</div>

	</div>
	<!-- end: .center -->


</main>
