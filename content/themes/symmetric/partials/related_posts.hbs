{{#get "posts"  filter="id:-{{post.id}}" limit=4}}
{{#foreach posts }}

<!-- start: .meta -->
<div class="meta">
  <a href="{{url}}" class="local">
  <h1 class="title" id="post_title" style="font-family:Playfair Display;">{{title}}</h1>
  </a>
  <div class="fb-like" data-href="https://www.facebook.com/HeartCenteredRebalancing" data-layout="button_count" data-action="like" data-size="small" data-show-faces="true" data-share="false"></div>
      <div class="row">
              {{#if tags}}
            <div class="tags">
                  {{tags separator=""}}
            </div>
              {{/if}}
            <time datetime="{{date format="YYYY-MM-DD"}}"><i class="fa fa-clock-o"></i> {{date}}</time>
      </div>


  {{#if image}}
      {{^has tag="no cover"}}
              <div class="main-image cover">
                <img src="{{image}}"  style="width:100%" height="400"  alt="" />
                  <div class="center grid-container">
                      <div class="boxed cover" style="background: url({{image}});"></div>
                      <div class="boxed overlay"></div>
                  </div>
              </div>
          {{/has}}
  {{/if}}

    <!-- start: .center -->
  <div class="center content section grid-container {{#has tag="no cover"}}no-cover{{/has}}">

      <!-- start: .content -->

        <article class="{{post_class}}">
          {{#has tag="no cover"}}
            <header>
                <!-- start: .meta -->
                <div class="meta" style="margin-top:50px;">
                  {{#if tags}}
                    <div class="tags">
                      {{tags separator=""}}
                    </div>
                  {{/if}}
                  <time datetime="{{date format="YYYY-MM-DD"}}"><i class="fa fa-clock-o"></i> {{date}}</time>
                </div>
                <!-- end: .meta -->
                <div class="clear"></div>
                <h2 class="title">{{title}}</h2>
                <div class="post-format">
                  {{#if image}}
                    <div class="main-image"><img src="{{image}}"></div>
                  {{/if}}
                </div>
            </header>

          {{/has}}
          <section class="post-content" style="margin-bottom:50px;">

            <div class="ad-container col-lg-4 col-xs-12">
              <script type="text/javascript"><!--

