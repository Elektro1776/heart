{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<!-- start: #single -->
<div class="container content-wrap">
<div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
		<main id="single" class="main " role="main">
		{{#post}}
			<!-- start: .meta -->
			<div class="meta col-lg-12 col-md-12 col-xs-12">
				<a href="{{url}}" class="local">
				<h1 class="title" id="post_title" style="font-family:Roboto Condensed;">{{title}}</h1>
				</a>
					<div class="row">
		          {{#if tags}}
		            <div class="tags">
		              {{tags separator=""}}
		            </div>
		          {{/if}}
		          <time datetime="{{date format="YYYY-MM-DD"}}"><i class="fa fa-clock-o"></i> {{date}}</time>
							<div class="fb-like" data-href="https://www.facebook.com/HeartCenteredRebalancing" data-layout="button_count" data-action="like" data-size="small" data-show-faces="true" data-share="false" style="display:inline-block;"></div>
		      </div>
		    </div>
		    <div class="clear">
		    </div>
		    {{#if image}}
		        {{^has tag="no cover"}}

		                <div class="main-image cover">
											<img src="{{image}}"  style="width:100%" height="400"  alt="" />
		                    <div class="center grid-container">
		                        <div class="boxed cover" style="background: url({{image}});"></div>
		                        <div class="boxed overlay"></div>
		                    </div>
		                </div>
										<!--<div class="addthis_sharing_toolbox "></div>-->
		        {{/has}}
		    {{/if}}
		<div class="clear"></div>
				<!-- start: .center -->
				<div class="center content section grid-container {{#has tag="no cover"}}no-cover{{/has}}">
						<!-- start: .content -->
						<div class="row">
							<article class="{{post_class}}">
								{{#has tag="no cover"}}
									<header>
										<!-- start: .meta -->
										<div class="meta">
											{{#if tags}}
												<div class="tags">
													{{tags separator=""}}
												</div>
											{{/if}}
											<time datetime="{{date format="YYYY-MM-DD"}}"><i class="fa fa-clock-o"></i> {{date}}</time>
											<a href="#comments" class="comments alignright"><i class="fa fa-comment"></i> <span class="disqus-comment-count" data-disqus-url="{{@blog.url}}{{url}}">0</span></a>
										</div>
										<!-- end: .meta -->
										<div class="clear"></div>
										<h2 class="title">{{title}}</h2>
										<div class="post-format">
											{{#if image}}
												<div class="main-image"><img src="{{image}}"></div>
											{{/if}}
										</div>
									</header>
								{{/has}}
								<section class="post-content col-lg-12 col-md-8 col-sm-8 col-xs-12" style="z-index:999;margin-bottom:50px;">
									<div class="ad-container col-lg-4">
									<script type="text/javascript"><!--

google_ad_client = "ca-pub-2315916373893743";

/* heartcenteredrebalancing.com 300x250 */

google_ad_slot = "6796582565";

google_ad_width = 300;

